<div class="row">
  <div class="col s12 m8 offset-m2 center">
    <h5>Forgot your password?</h5>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="inputfield">
        <%= f.email_field :email, id: "email", placeholder: "email", autofocus: true %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Send me reset password instructions</button>
    <% end %>
  </div>
</div>
